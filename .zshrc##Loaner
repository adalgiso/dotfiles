export BROWSER=firefox
export PATH=$HOME/bin:/home/ada/.gem/ruby/2.4.0/bin:$HOME/go/bin:/usr/local/go/bin:/usr/local/bin:$PATH
export ZSH=$HOME/.oh-my-zsh
export GOPATH=$(go env GOPATH)
export RUBYOPT="-W0"
export TESTKIT_DRIVER=virsh
export LIBVIRT_DEFAULT_URI=qemu:///system
export TERMINAL=termite
export TERM=xterm-256color
export LANG=en_US.UTF-8
export EDITOR='vim'

ZSH_THEME="agnoster"
DISABLE_AUTO_UPDATE="true"
DISABLE_AUTO_TITLE="true"
COMPLETION_WAITING_DOTS="true"

plugins=(ack docker docker-compose git kubectl pass tmux vagrant zsh-dircolors-solarized)

source $ZSH/oh-my-zsh.sh

# disable Ctrl+S 'freeze terminal' keybind
stty -ixon

# User configuration

system_type=$(uname -s)
if [ "$system_type" = "Darwin" ]; then
  plugins+=(brew osx)
  test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"
else
fi

setopt prompt_subst

settitle() {
  printf "\033k$1\033\\"
}

ssh() {
  settitle "$*"
  command ssh "$@"
  settitle "zsh"
}

if [ -d $HOME/.zsh.d ]; then
  for file in $HOME/.zsh.d/*.sh; do
    source $file
  done
fi


source ~/.bash_aliases
source /etc/profile.d/vte.sh
# source ~/.zsh/zsh-dircolors-solarized/zsh-dircolors-solarized.zsh
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

