# load .zsh.d plugins
if [[ -d $HOME/.zsh.d ]]; then
  for file in $HOME/.zsh.d/*.sh; do
    source $file
  done
fi

if [[ -d $HOME/.zsh.d ]]; then
  for file in $HOME/.zsh.d/*.zsh; do
    source $file
  done
fi
