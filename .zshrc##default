# set up kubectl completion for zsh
kubectl () {
    command kubectl $*
    if [[ -z $KUBECTL_COMPLETE ]]
    then
        source <(command kubectl completion zsh)
        KUBECTL_COMPLETE=1 
    fi
}

setopt prompt_subst
# setopt complete_aliases

settitle() {
  printf "\033k$1\033\\"
}

ssh() {
  settitle "$*"
  command ssh "$@"
  settitle "zsh"
}

path+=$HOME/bin:$GOPATH/bin
typeset -U path

stty -ixon  # disable Ctrl+S 'freeze terminal' keybind

fpath=(~/.zsh.d/completion $fpath)
autoload -U +X compinit && compinit
#compdef k='kubectl'
#compdef d='docker'
# make sure my aliases get priority
source $HOME/.zsh.d/aliases.sh

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

eval "$(direnv hook zsh)"

if [[ "$(uname -s)" = "Darwin" ]]; then
  export PATH="/usr/local/opt/curl/bin:/usr/local/opt/gnu-sed/libexec/gnubin:/usr/local/opt/coreutils/libexec/gnubin:$PATH"
  autoload bashcompinit && bashcompinit
  complete -C '/usr/local/bin/aws_completer' aws
  source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
  source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc"
fi
