execute pathogen#infect()
syntax on
filetype plugin indent on
set background=dark
colorscheme solarized
set nocompatible
set number
set nowrap
set showmatch
set visualbell
set errorbells 
set hlsearch
set smartcase
set ignorecase
set incsearch
set autoindent
set expandtab
set shiftwidth=2
set smartindent
set smarttab
set softtabstop=2
set ruler
set undolevels=1000
set backspace=indent,eol,start
 
